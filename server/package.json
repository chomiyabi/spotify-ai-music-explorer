    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "build:prod": "tsc --build --verbose",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "health": "curl -f http://localhost:5001/api/health || exit 1",
    "setup:dify": "node scripts/setup-dify-workflow.js",
    "test:dify": "node -e \"const dify=require('./dist/services/difyService').default; dify.healthCheck().then(r=>console.log(JSON.stringify(r,null,2))).catch(e=>console.error(e.message))\"",
    "dsl": "node scripts/dsl-workflow-cli.js",
    "dsl:validate": "npm run dsl validate",
    "dsl:execute": "npm run dsl execute",
    "dsl:init": "npm run dsl init"
  },
